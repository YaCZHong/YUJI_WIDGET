<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_ffffffff_radius_8dp">

    <ImageView
        android:id="@+id/iv_weather_now"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_widget_mark"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/icon_widget_tag"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tv_city"
        app:layout_constraintEnd_toStartOf="@id/tv_city"
        app:layout_constraintTop_toTopOf="@id/tv_city" />

    <TextView
        android:id="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/my_font"
        android:textColor="@color/colorTextDark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_weather_now"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_weather_now"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_weather_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/my_font"
        android:textColor="@color/colorTextDark2nd"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_weather_now"
        app:layout_constraintEnd_toEndOf="@id/tv_city"
        app:layout_constraintTop_toBottomOf="@id/tv_city" />

    <TextView
        android:id="@+id/tv_overdue_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/my_font"
        android:gravity="center_vertical"
        android:text="数据已过期"
        android:textColor="@color/app_red"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tv_weather_now"
        app:layout_constraintEnd_toEndOf="@id/iv_weather_now"
        app:layout_constraintStart_toStartOf="@id/iv_weather_now"
        app:layout_constraintTop_toTopOf="@id/tv_weather_now" />

</androidx.constraintlayout.widget.ConstraintLayout>

